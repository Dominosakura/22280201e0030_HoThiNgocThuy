@model IEnumerable<Candy.Models.Product>

@{
    ViewBag.Title = ViewBag.CategoryName ?? "Products";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<head>
    <link rel="stylesheet" href="~/Content/CSS.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<div class="container mt-4">
    <h2 class="text-center mb-5">@ViewBag.CategoryName</h2>

    <div class="row">
        @foreach (var item in Model)
        {
            var mainImage = item.ProductImages.FirstOrDefault(img => img.IsMainImage == true) ?? new Candy.Models.ProductImage();
            <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12 mb-4">
                <div class="card shadow-sm border-light rounded">
                    <!-- Thumbnail Image -->
                    <img src="~/Images/@mainImage.ImageURL" alt="Thumbnail Image" class="card-img-top rounded-circle mx-auto d-block" style="width:200px; height:200px; object-fit: cover;">
                    <div class="card-body text-center">
                        <h5 class="card-title">
                            <a href="@Url.Action("Details", "Product", new { id = item.ProductID })" class="text-dark text-decoration-none">@item.ProductName</a>
                        </h5>
                        <p class="card-text text-muted">@String.Format("{0:N0} VNĐ", item.Price)</p>
                        <div class="d-flex justify-content-center mt-3">
                            <a href="#" class="btn btn-primary mx-2" role="button">Add to cart</a>
                            <a href="#" class="btn btn-outline-danger mx-2" role="button">
                                <i class="bi bi-bookmark-heart-fill" style="font-size: 1.5rem;"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Back Button -->
    <div class="text-left mt-4">
        <a href="@Url.Action("Index", "Product")" class="btn btn-secondary">Back to Home</a>
    </div>
</div>

<style>
    .no-underline-black {
        text-decoration: none;
        color: black;
    }

        .no-underline-black:hover {
            color: #555;
        }

    .card-title a {
        font-size: 1.2rem;
        font-weight: 600;
    }

    .card-body .card-text {
        font-size: 1rem;
        color: #555;
    }

    .btn-primary {
        background-color: #6f42c1;
        border-color: #6f42c1;
        font-weight: bold;
    }

        .btn-primary:hover {
            background-color: #5a2e8e;
            border-color: #5a2e8e;
        }

    .btn-outline-danger {
        border-color: #e74a3b;
        color: #e74a3b;
    }

        .btn-outline-danger:hover {
            background-color: #e74a3b;
            color: white;
        }

    .card {
        transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    
    .container {
        max-width: 1200px;
    }

    .row {
        margin-left: 0;
        margin-right: 0;
    }

    .card-body {
        padding: 1.25rem;
    }

    .card-img-top {
        border-radius: 50%;
        transition: transform 0.3s ease-in-out;
    }

        .card-img-top:hover {
            transform: scale(1.1);
        }

    .btn {
        transition: background-color 0.3s, border-color 0.3s;
    }

    .btn-primary:hover {
        background-color: #5a2e8e;
        border-color: #5a2e8e;
    }

    .btn-outline-danger:hover {
        background-color: #e74a3b;
        color: white;
    }
</style>
