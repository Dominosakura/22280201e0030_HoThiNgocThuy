@model Candy.Models.ProductCategory

<div class="container">
    <h2 class="text-danger text-center mb-4">Confirm Deletion</h2>
    <h4 class="text-muted text-center mb-4">Are you sure you want to delete this product category?</h4>

    <div class="card shadow-sm rounded-lg">
        <div class="card-body bg-light">
            <dl class="row">
                <dt class="col-sm-4 font-weight-bold">Category Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.CategoryName)</dd>

                <dt class="col-sm-4 font-weight-bold">Description</dt>
                <dd class="col-sm-8">
                    <p>@Html.Raw(@Model.Description.ToString().Replace("\n", "<br />&nbsp;&nbsp;&nbsp;&nbsp;"))</p>
                </dd>

                <dt class="col-sm-4 font-weight-bold">Category Image</dt>
                <dd class="col-sm-8">
                    <img src="~/Images/@Model.ImageURL" alt="@Model.CategoryName" class="img-fluid img-thumbnail" />
                </dd>

               
            </dl>

            <div class="alert alert-warning mt-3">
                <strong>Note:</strong> Once deleted, this category cannot be recovered. Make sure to delete all related products beforehand.
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-group text-center mt-4">
                    <button type="submit" class="btn btn-danger btn-lg px-4 py-2 mx-2">
                        <i class="bi bi-trash me-2"></i>Delete
                    </button>
                    @Html.ActionLink("Back to List", "CategoriesList", null, new { @class = "btn btn-secondary btn-lg px-4 py-2 mx-2" })
                </div>
            }
        </div>
    </div>
</div>
