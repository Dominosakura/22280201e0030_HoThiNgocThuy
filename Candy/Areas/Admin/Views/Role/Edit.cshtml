@model Candy.Models.User

<h2 class="text-center text-primary my-4">Edit User Information</h2>

@using (Html.BeginForm("Edit", "Role", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card shadow-lg mx-auto" style="max-width: 800px; border-radius: 10px; overflow: hidden;">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">User Information</h4>
        </div>
        <div class="card-body bg-light">
            @Html.HiddenFor(model => model.UserID)

            <!-- Username -->
            <div class="mb-4">
                <label class="form-label fw-bold">Username</label>
                @Html.TextBoxFor(model => model.Username, new { @class = "form-control", placeholder = "Enter username" })
                @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger mt-2" })
            </div>

            <!-- Password -->
            <div class="mb-4">
                <label class="form-label fw-bold">Password</label>
                <input type="password" class="form-control" value="@Model.Password" readonly />
            </div>

            <!-- Email -->
            <div class="mb-4">
                <label class="form-label fw-bold">Email</label>
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", placeholder = "Enter email" })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger mt-2" })
            </div>

            <!-- Full Name -->
            <div class="mb-4">
                <label class="form-label fw-bold">Full Name</label>
                @Html.TextBoxFor(model => model.FullName, new { @class = "form-control", placeholder = "Enter full name" })
                @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger mt-2" })
            </div>

            <!-- Phone -->
            <div class="mb-4">
                <label class="form-label fw-bold">Phone</label>
                @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control", placeholder = "Enter phone number" })
                @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger mt-2" })
            </div>

            <!-- Address -->
            <div class="mb-4">
                <label class="form-label fw-bold">Address</label>
                @Html.TextBoxFor(model => model.Address, new { @class = "form-control", placeholder = "Enter address" })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger mt-2" })
            </div>

            <!-- Avatar -->
            <div class="mb-4">
                <label class="form-label fw-bold">Avatar</label>
                <input type="file" name="fFileUpload" class="form-control" />
                <div class="mt-3 text-center">
                    <img src="~/Images/Avatar/@Model.AvatarPath" alt="Current Avatar" class="img-thumbnail rounded-circle"
                         style="width: 150px; height: 150px; object-fit: cover;" />
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="d-flex justify-content-between align-items-center">
                <input type="submit" value="Save Changes" class="btn btn-primary px-4" />
                @Html.ActionLink("Back", "Index", null, new { @class = "btn btn-outline-secondary px-4" })
            </div>
        </div>
    </div>
}
