        }

        .pagination-container {
            text-align: center;
            margin-top: 20px;
        }

        .pagedlist-pager {
            display: inline-block;
            margin: 5px 10px;
        }

            .pagedlist-pager a {
                color: #007bff;
                font-size: 1rem;
                padding: 8px 15px;
                border: 1px solid #ddd;
                border-radius: 4px;
                margin: 0 5px;
            }

                .pagedlist-pager a:hover {
